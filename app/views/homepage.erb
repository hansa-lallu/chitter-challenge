<html>
 <head>
  <link rel="stylesheet" type="text/css" href="../style.css">
    <title>Chitter</title>
  </head>
  <body>
    <% if @user.nil? %>
      <div>
        <ul>
          <li><a class="active" href="#home">Home</a></li>
          <li><a href="/sign_up">Sign up</a></li>
          <li><a href="/login">Login</a></li>
      </ul>   
        <h1>Welcome to Chitter!</h1>
      </div>
      <div>
        <a id="button" href="/sign_up">Sign Up</a>
        <a id="button" href="/login">Login</a>
      </div>
      <div> 
        <h2>The latest from Makers</h2>
      </div>
      <div>
         <% @messages.each do |message|%>
          <%= message.tweet %>
          <%= message.created_at %> 
          <%= message.username %> 
          <br>
         <% end %>
      </div>
    <% else %>
      <div>
        <h1>Chitter</h1>
      </div>
      <div>
        <a id="button" href="/sessions/destroy">Logout</a>
      </div>
      <div>
        <h3>Create a Peep</h3>
      </div>
      <div>
          <form action="/add_peep" method="post">
            <input type="text" name="content" />
            <input id="button" type="submit" value="Peep!" />
          </form>
      </div>
      <div> 
        <h2>The latest from Makers</h2>
      </div>
         <% @messages.each do |message|%>
          <%= message.tweet %>
          <%= message.created_at %> 
          <%= message.username %> 
          <br>
         <% end %>
      <div>
      </div>
    <% end %>
</body>
</html> 